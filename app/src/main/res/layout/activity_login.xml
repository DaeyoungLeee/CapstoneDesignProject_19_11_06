<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/falling_icon_black"/>

    <EditText
        android:id="@+id/edt_login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/setting_round_edt_color"
        android:ems="12"
        android:hint="아이디"
        android:inputType="textEmailAddress"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edt_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_login_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/setting_round_edt_color"
        android:ems="12"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="8dp" />

    <CheckBox
        android:id="@+id/check_saveId"
        android:layout_below="@+id/edt_login_password"
        android:layout_centerHorizontal="true"
        android:text="아이디 저장"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/check_autoLogin"
        android:layout_below="@+id/check_saveId"
        android:layout_centerHorizontal="true"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="자동 로그인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_autoLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/setting_rec_button_color"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_signIn_click"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:text="회원가입"/>

</RelativeLayout>